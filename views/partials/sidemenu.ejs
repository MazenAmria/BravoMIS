<div class="top-header">
    <div class="top-logo float-right"><img src="/images/logo.png"/></div>
    <div class="log-out float-left"><a id="logout" href="/logout">تسجيل الخروج</a></div>
</div>
<header id="sidemenu">
    <div class="user-details">
        <h1><span class='user-icon'><i class="far fa-user"></i></span><%= name %></h1>
        <span>- <%= role %></span>
    </div>
    <div class="user-menu">
        <ul>
            <% for (const menuItem of menu) { %>
                <li class="menu-item"
                    onclick="
                            route('/<%= menuItem.target %>');
                            [...$('.menu-item')].forEach(item => item.classList.remove('active'));
                            event.currentTarget.classList.add('active');
                            "
                    style="cursor: pointer">
                    <a>
                        <%= menuItem.title %><span class="menu-icon float-left"><i class="<%= menuItem.iconClass %>"></i></span>
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
</header>
